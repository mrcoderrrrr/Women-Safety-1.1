<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginPage.register_frag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/logbut"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c_password"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/redbutton"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_txt"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="18dp"
                android:hint="Full Name"
                android:textSize="15sp"
                android:background="@drawable/edittext" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_txt"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="18dp"
                android:hint="Phone Number"
                android:maxLength="10"
               android:textSize="15sp"
                android:background="@drawable/edittext" />


            <TextView
                android:id="@+id/name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="Name :"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/password_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Password :"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/username_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Email/Username :"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <EditText
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username_txt"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="8dp"
                android:hint="Email Id"
                android:textSize="15sp"
                android:background="@drawable/edittext" />
            <TextView
                android:id="@+id/phone_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Phone no. :"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password_txt"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="8dp"
                android:hint="Password"
                android:textSize="15sp"
                android:background="@drawable/edittext" />

            <TextView
                android:id="@+id/c_password_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Confirm Password :"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <EditText
                android:id="@+id/c_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c_password_txt"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="18dp"
                android:hint="Confirm Password"
                android:textSize="15sp"
                android:background="@drawable/edittext" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>